---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Create Account | GemVoyage"
  description="Join the GemVoyage community and start discovering hidden gems around the world. Create your free account to share travel experiences and connect with fellow explorers."
  noIndex={true}
>
  <Navbar />
  <div class="max-w-md mx-auto p-4 min-h-[60vh] flex flex-col justify-center">
    <h1 class="text-2xl font-bold mb-4">Create Account</h1>
    <form id="register-form" class="space-y-4">
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <div class="mb-4">
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <div class="mb-4">
        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        />
      </div>

      <div class="flex items-start gap-3">
        <input
          type="checkbox"
          id="privacy"
          name="privacy"
          required
          class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
        />
        <label for="privacy" class="text-sm">
          I accept the <a href="/privacy" class="underline text-blue-600 hover:text-blue-800">Privacy Policy</a>
        </label>
      </div>

      <div class="flex items-start gap-3">
        <input
          type="checkbox"
          id="terms"
          name="terms"
          required
          class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
        />
        <label for="terms" class="text-sm">
          I accept the <a href="/terms" class="underline text-blue-600 hover:text-blue-800">Terms of Service</a>
        </label>
      </div>

      <button
        type="submit"
        id="submit-button"
        class="py-2 px-4 bg-blue-600 text-white font-bold w-full rounded hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
      >
        Register
      </button>
      
      <div id="error-message" class="text-red-600 text-sm mt-2 text-center hidden"></div>
    </form>

    <p class="mt-4 text-center text-sm">
      Already have an account? <a href="/login" class="underline text-blue-600 hover:text-blue-800">Login here</a>
    </p>
  </div>
  <Footer />

  <script is:inline>
    const API_BASE_URL = import.meta.env.PUBLIC_API_BASE_URL;
    
    const registerForm = document.getElementById('register-form');
    const errorMessage = document.getElementById('error-message');
    const submitButton = document.getElementById('submit-button');

    function showError(message) {
      if (errorMessage) {
        errorMessage.textContent = message;
        errorMessage.classList.remove('hidden');
      }
    }

    function hideError() {
      if (errorMessage) {
        errorMessage.classList.add('hidden');
      }
    }

    function setLoading(loading) {
      if (submitButton) {
        submitButton.textContent = loading ? 'Registering...' : 'Register';
        submitButton.disabled = loading;
      }
    }

    if (registerForm) {
      registerForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        hideError();
        setLoading(true);

        const formData = new FormData(registerForm);
        const email = formData.get('email');
        const password = formData.get('password');
        const confirmPassword = formData.get('confirmPassword');
        const acceptPrivacy = formData.get('privacy');
        const acceptTerms = formData.get('terms');

        // Basic validation
        if (password !== confirmPassword) {
          showError('Passwords do not match');
          setLoading(false);
          return;
        }

        if (!acceptPrivacy || !acceptTerms) {
          showError('You must accept both privacy policy and terms of service');
          setLoading(false);
          return;
        }

        try {
          const response = await fetch(`${API_BASE_URL}/auth/register`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email, password }),
          });

          if (!response.ok) {
            const errorText = await response.text();
            let errorMsg;
            try {
              errorMsg = JSON.parse(errorText).msg || 'Registration failed';
            } catch {
              errorMsg = 'Registration failed';
            }
            showError(errorMsg);
            setLoading(false);
            return;
          }

          const data = await response.json();
          if (data.access_token) {
            localStorage.setItem('access_token', data.access_token);
          }
          localStorage.setItem('isLoggedIn', 'true');
          if (email) {
            localStorage.setItem('pending_verification_email', email.toString());
          }
          window.location.href = '/email-confirmation';
        } catch (err) {
          const errorMessage = err instanceof Error ? err.message : 'Registration failed';
          showError(errorMessage);
          setLoading(false);
        }
      });
    }
  </script>
</Layout>
