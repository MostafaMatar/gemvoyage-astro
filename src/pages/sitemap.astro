---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface SitemapLink {
  url: string;
  title: string;
  description: string;
  isExternal?: boolean;
}

interface SitemapSection {
  title: string;
  description: string;
  icon: string;
  links: SitemapLink[];
}

const sitemapSections: SitemapSection[] = [
  {
    title: "Main Pages",
    description: "Core pages of the application",
    icon: "home",
    links: [
      {
        url: "/",
        title: "Home",
        description: "Welcome page with featured gems and latest content"
      },
      {
        url: "/browse",
        title: "Browse Gems",
        description: "Explore all available gems with filtering and search"
      }
    ]
  },
  {
    title: "User Account",
    description: "Account management and authentication",
    icon: "user",
    links: [
      {
        url: "/login",
        title: "Login",
        description: "Sign in to your account"
      },
      {
        url: "/register",
        title: "Register",
        description: "Create a new account"
      },
      {
        url: "/edit-profile",
        title: "Edit Profile",
        description: "Update your profile information"
      }
    ]
  },
  {
    title: "Content Creation",
    description: "Create and manage content",
    icon: "plus",
    links: [
      {
        url: "/create",
        title: "Create Gem",
        description: "Share a new gem with the community"
      }
    ]
  },
  {
    title: "Legal & Information",
    description: "Terms, policies and information",
    icon: "shield",
    links: [
      {
        url: "/terms",
        title: "Terms of Service",
        description: "Terms and conditions for using the platform"
      },
      {
        url: "/privacy",
        title: "Privacy Policy",
        description: "How we handle your personal information"
      }
    ]
  },
  {
    title: "Technical",
    description: "Technical resources for developers and SEO",
    icon: "file",
    links: [
      {
        url: "/sitemap.xml",
        title: "XML Sitemap",
        description: "Machine-readable sitemap for search engines",
        isExternal: true
      },
      {
        url: "/robots.txt",
        title: "Robots.txt",
        description: "Crawler directives and sitemap reference",
        isExternal: true
      }
    ]
  }
];

const getIconSvg = (iconName: string) => {
  const icons = {
    home: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>`,
    user: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>`,
    plus: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" /></svg>`,
    shield: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
    file: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>`,
    search: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>`,
    external: `<svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>`
  };
  return icons[iconName] || '';
};
---

<Layout 
  title="Sitemap | GemVoyage"
  description="Browse our comprehensive sitemap to easily navigate GemVoyage and discover all available pages for hidden gems, travel destinations, and community features."
>
  <Navbar />
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Site Map</h1>
      <p class="text-gray-600 text-lg">
        A comprehensive overview of all pages and resources available on our platform.
        This sitemap helps users navigate our site and assists search engines in indexing our content.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-1 lg:grid-cols-2">
      {sitemapSections.map((section) => (
        <div class="bg-white border border-gray-200 rounded-lg shadow-sm h-fit">
          <div class="p-6 pb-4">
            <h2 class="text-xl font-semibold mb-2 flex items-center gap-2">
              <span set:html={getIconSvg(section.icon)} />
              {section.title}
            </h2>
            <p class="text-gray-600">{section.description}</p>
          </div>
          <div class="px-6 pb-6">
            <ul class="space-y-3">
              {section.links.map((link) => (
                <li class="border-l-2 border-blue-100 pl-4">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      {link.isExternal ? (
                        <a
                          href={link.url}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="font-medium text-blue-600 hover:underline flex items-center gap-1"
                        >
                          {link.title}
                          <span set:html={getIconSvg('external')} />
                        </a>
                      ) : (
                        <a
                          href={link.url}
                          class="font-medium text-blue-600 hover:underline"
                        >
                          {link.title}
                        </a>
                      )}
                      <p class="text-sm text-gray-600 mt-1">
                        {link.description}
                      </p>
                    </div>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-8 p-6 bg-gray-50 rounded-lg">
      <h2 class="text-xl font-semibold mb-3 flex items-center gap-2">
        <span set:html={getIconSvg('search')} />
        For Search Engines
      </h2>
      <p class="text-gray-600 mb-4">
        This website provides structured sitemaps for search engines and web crawlers:
      </p>
      <div class="flex flex-wrap gap-2">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-200 text-gray-800">
          <a href="/sitemap.xml" target="_blank" rel="noopener noreferrer">
            XML Sitemap
          </a>
        </span>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-200 text-gray-800">
          <a href="/robots.txt" target="_blank" rel="noopener noreferrer">
            Robots.txt
          </a>
        </span>
      </div>
    </div>
  </div>
  <Footer />
</Layout>
