---
import Navbar from './Navbar.astro';
import Footer from './Footer.astro';

const termsSections = [
  {
    title: "1. Acceptance of Terms",
    content: [
      "By accessing and using GemVoyage, you accept and agree to be bound by the terms and provision of this agreement.",
      "If you do not agree to abide by the above, please do not use this service."
    ]
  },
  {
    title: "2. Use License",
    content: [
      "Permission is granted to temporarily download one copy of GemVoyage for personal, non-commercial transitory viewing only.",
      "This is the grant of a license, not a transfer of title, and under this license you may not:",
      "modify or copy the materials",
      "use the materials for any commercial purpose or for any public display",
      "attempt to reverse engineer any software contained on GemVoyage's website",
      "remove any copyright or other proprietary notations from the materials"
    ]
  },
  {
    title: "3. User Content",
    content: [
      "Users are responsible for all content they post on GemVoyage.",
      "You retain ownership of your content but grant us a license to use it.",
      "Content must not be illegal, harmful, or infringe on others' rights.",
      "We reserve the right to remove content that violates these terms."
    ]
  },
  {
    title: "4. Privacy Policy",
    content: [
      "Your privacy is important to us. Please review our Privacy Policy.",
      "By using our service, you agree to the collection and use of information in accordance with our Privacy Policy."
    ]
  },
  {
    title: "5. Prohibited Uses",
    content: [
      "You may not use our service:",
      "For any unlawful purpose or to solicit others to act unlawfully",
      "To violate any international, federal, provincial, or state regulations, rules, laws, or local ordinances",
      "To infringe upon or violate our intellectual property rights or the intellectual property rights of others",
      "To harass, abuse, insult, harm, defame, slander, disparage, intimidate, or discriminate",
      "To submit false or misleading information"
    ]
  },
  {
    title: "6. Termination",
    content: [
      "We may terminate or suspend your account and bar access to the service immediately, without prior notice or liability, under our sole discretion, for any reason whatsoever and without limitation, including but not limited to a breach of the Terms."
    ]
  },
  {
    title: "7. Disclaimer",
    content: [
      "The information on this website is provided on an 'as is' basis.",
      "To the fullest extent permitted by law, this Company excludes all representations, warranties, conditions and terms relating to our website and the use of this website."
    ]
  }
];
---

<Navbar />
<div class="max-w-3xl mx-auto p-8 bg-white rounded-xl shadow-md my-12">
  <h1 class="text-3xl font-bold mb-8 text-center">Terms of Service</h1>
  <div class="space-y-8">
    {termsSections.map((section) => (
      <section>
        <h2 class="text-xl font-semibold mb-2">{section.title}</h2>
        <ul class="list-disc ml-6 space-y-1">
          {section.content.map((line) => (
            <li class="text-base text-gray-600">{line}</li>
          ))}
        </ul>
      </section>
    ))}
  </div>
  
  <div class="mt-8 p-4 bg-gray-50 rounded-lg">
    <p class="text-sm text-gray-600">
      <strong>Last updated:</strong> {new Date().toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </p>
    <p class="text-sm text-gray-600 mt-2">
      If you have any questions about these Terms of Service, please contact us.
    </p>
  </div>
</div>
<Footer />