---
import AuthorInfo from './AuthorInfo.astro';
import VoteButtons from './VoteButtons.astro';

interface Props {
  gem: {
    id: string;
    title: string;
    description: string;
    image?: string;
    location: string;
    category: string;
    slug: string;
    featured?: boolean;
    author: {
      id: string;
      name: string;
    };
    createdAt: string;
    upvotes: number;
    downvotes: number;
  };
  size?: 'default' | 'large';
  className?: string;
}

const { gem, size = 'default', className = '' } = Astro.props;

function cn(...classes: (string | undefined)[]) {
  return classes.filter(Boolean).join(' ');
}
---

<a href={`/gem/${gem.slug}`} class="block group">
  <div class={cn(
    "rounded-lg border bg-card text-card-foreground shadow-sm overflow-hidden hover:shadow-lg transition-shadow duration-300",
    className
  )}>
    <div class={cn(
      "relative overflow-hidden",
      size === 'large' ? 'h-64 md:h-80' : 'h-48'
    )}>
      {gem.image ? (
        <img
          src={gem.image}
          alt={gem.title}
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center">
          <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
          </svg>
        </div>
      )}
      
      <!-- Badges -->
      <div class="absolute top-2 left-2 flex flex-col space-y-1">
        {gem.featured && (
          <span class="inline-flex items-center rounded-full border font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 bg-yellow-400 text-yellow-900 border-yellow-500 px-2.5 py-0.5 text-xs">
            ‚≠ê Featured
          </span>
        )}
      </div>
      
      <div class="absolute top-2 right-2">
        <span class="inline-flex items-center rounded-full border font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 bg-primary text-primary-foreground hover:bg-primary/80 px-2.5 py-0.5 text-xs">
          {gem.category}
        </span>
      </div>
    </div>
    
    <div class="p-6">
      <div class="space-y-3">
        <h3 class={cn(
          "font-semibold line-clamp-2 group-hover:text-primary transition-colors",
          size === 'large' ? 'text-2xl' : 'text-xl'
        )}>
          {gem.title}
        </h3>
        
        <p class="text-sm text-muted-foreground flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          {gem.location}
        </p>
        
        <p class={cn(
          "text-muted-foreground line-clamp-3",
          size === 'large' ? 'text-base' : 'text-sm'
        )}>
          {gem.description}
        </p>
        
        <div class="pt-2 border-t">
          <AuthorInfo author={gem.author} createdAt={gem.createdAt} className="" />
        </div>
      </div>
    </div>
    
    <div class="p-4 bg-gray-50 border-t">
      <VoteButtons 
        initialUpvotes={gem.upvotes} 
        initialDownvotes={gem.downvotes} 
        gemId={gem.id}
        vertical={true}
      />
    </div>
  </div>
</a>
